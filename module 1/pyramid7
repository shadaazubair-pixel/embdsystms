#include<stdio.h>
int main(){
    int i,j,m=0,rows;space=1;
    printf("enter the number of rows:");
    scanf("%d",&rows);
    for(i=1;i<=rows;i++){
        for(space=1;space<=rows-i;space++){
            printf(" ");
        }
        for(j=1;j<=i+m;j++){
            printf("*");
            m++;
        }
        printf("\n");
    }
    return 0;
}