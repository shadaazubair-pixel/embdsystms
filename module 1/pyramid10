#include<stdio.h>
int main(){
    int i,j,rows;
    printf("Enter the no: of rows:");
    scanf("%d",&rows);

    for(i=1;i<=rows-1;i++){
        for(j=1;j<=i;i++){
            printf("*");
        }
        printf("\n");
    }

    for(i=1;i<=rows;i++){
        for(j=rows;j>=i;j--){
            printf("*");
        }
        printf("\n";)
    }



    return 0;



}