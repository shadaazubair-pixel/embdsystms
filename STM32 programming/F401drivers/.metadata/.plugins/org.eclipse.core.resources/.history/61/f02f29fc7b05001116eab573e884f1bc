#include "stm32f401xx.h"
#include "stm32f401xx_gpio_driver.h"

void delay(void){
	for(uint32_t i=0; i<500000; i++); // delay function
}

void delay1(void){
	for(uint32_t i=0; i<=250; i++)
}

int main(void){

	GPIO_Handle_t GpioLed, GpioButton, GpioextLED1, GpioextLED2;

//LED configuraion
	GpioLed.pGPIOx = GPIOA;
	GpioLed.GPIO_PinConfig.GPIO_PinNumber = GPIO_PIN_NO_5;
	GpioLed.GPIO_PinConfig.GPIO_PinMode = GPIO_MODE_OUT;
	GpioLed.GPIO_PinConfig.GPIO_PinSpeed= GPIO_SPEED_HIGH ;
	GpioLed.GPIO_PinConfig.GPIO_PinOPType= OUTPUT_PUSHPULL;
	GpioLed.GPIO_PinConfig.GPIO_PinPupdControl = GPIO_NOPULLUP_NOPULLDOWN;


	//button configuration
	GpioButton.pGPIOx = GPIOC;
	GpioButton.GPIO_PinConfig.GPIO_PinNumber = GPIO_PIN_NO_13;
	GpioButton.GPIO_PinConfig.GPIO_PinMode= GPIO_MODE_IN;
	GpioButton.GPIO_PinConfig.GPIO_PinSpeed = GPIO_SPEED_HIGH;
	GpioButton.GPIO_PinConfig.GPIO_PinOPType =OUTPUT_PUSHPULL;
	GpioButton.GPIO_PinConfig.GPIO_PinPupdControl=GPIO_NOPULLUP_NOPULLDOWN;



	//LED configuraion
		GpioLed.pGPIOx = GPIOA;
		GpioLed.GPIO_PinConfig.GPIO_PinNumber = GPIO_PIN_NO_6, GPIO_PIN_NO_7;
		GpioLed.GPIO_PinConfig.GPIO_PinMode = GPIO_MODE_OUT;
		GpioLed.GPIO_PinConfig.GPIO_PinSpeed= GPIO_SPEED_HIGH ;
		GpioLed.GPIO_PinConfig.GPIO_PinOPType= OUTPUT_PUSHPULL;
		GpioLed.GPIO_PinConfig.GPIO_PinPupdControl = GPIO_NOPULLUP_NOPULLDOWN;

// enable clock
	GPIO_PeriClockControl(GPIOA,ENABLE);
	GPIO_PeriClockControl(GPIOC,ENABLE);


	//GPIO initializing
	GPIO_Init(&GpioLed);
	GPIO_Init(&GpioButton);
	GPIO_Init(&GpioextLED1,&GpioextLED2);








	while(1)
	{
       //task 1
		uint8_t a=GPIO_Readfrominputpin(GPIOC, GPIO_PIN_NO_13);

		if(a==0) //if button pressed
		{
			GPIO_Writetooutputpin(GPIOA,GPIO_PIN_NO_5,1);  //LED ON


		}
		else
		{
			GPIO_Writetooutputpin(GPIOA,GPIO_PIN_NO_5,0); //LED off


		}
		delay();

		//task2


		GPIO_Writetooutputpin(GPIOA,GPIO_PIN_NO_6,1);
		GPIO_Writetooutputpin(GPIOA,GPIO_PIN_NO_7,0);

		delay1();


		GPIO_Writetooutputpin(GPIOA,GPIO_PIN_NO_6,0);
		GPIO_Writetooutputpin(GPIOA,GPIO_PIN_NO_7,1);
		delay1();





	}

}




