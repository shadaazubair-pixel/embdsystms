#include<stdio.h>
#include<math.h>
int main(){
    int s,a,b,c,area;
    
    printf("enter the value of a=");
    scanf("%d",&a);

    printf("enter the value of b=");
    scanf("%d",&b);

    printf("enter the value of c=");
    scanf("%d",&c);

    s=(a+b+c)/2;
    printf("the semiperimeter is =%d\n",s);

    area=sqrt(s*(s-a)*(s-b)*(s-c));

    printf("area of triangle=%d",area);

    return 0;


    

}