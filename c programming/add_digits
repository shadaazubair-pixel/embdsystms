#include<stdio.h>
int main(){
    int a,sum;
    printf("enter the three digit number:");
    scanf("%d",&a);

    if(a>=100&&a<=999){
        int b=a/100;
        int c=(a/100)%10;
        int d=a%10;
        sum=b+c+d;

        printf("the sum of three digit number is :%d",sum);
        else{
            printf("invalid!enter a three digit number");
            
        }
    }
}