#include<stdio.h>

void PrintBin(int n){
    int mask;
    for(int i=31;i>=0;i--){
        mask=1<<i;
        if(n&mask){
            printf("1");

        }
        else{
            printf("0");
        }
    }
    printf("\n");
    
}
void SetBit(int n,int pos){
    int mask=1<<pos;
    n=n|mask;
    PrintBin(n);

    int count=0;
    for(int i=0;i<=n,i++){
        n%=10;
        count++;

    }
    if(n==1){
        printf("the number of 1's=%d",count);
    }
    else{
        printf("the number of 0's=%d",count);
    }
    


}







int main(){
    int a,pos;
    printf("Enter a number:");
    scanf("%d",&a);
    PrintBin(a);
    printf("enter the bit position:");
    scanf("%d",&pos);

    SetBit(a,pos);
    return 0;
}